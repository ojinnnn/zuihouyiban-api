FROM node:18-bullseye-slim

# 安装必要的系统包
RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制 package.json 和 package-lock.json
COPY package*.json ./

# 安装依赖
RUN npm install --only=production

# 复制源代码
COPY . .

# 构建项目
RUN npm run build

# 暴露端口（将从环境变量读取）
EXPOSE 7861

# 设置生产环境
ENV NODE_ENV=production

# 启动应用
CMD [ "npm", "start" ]
